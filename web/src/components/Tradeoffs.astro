---
import { Card, CardContent } from '@/components/ui/card';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
import { tradeoffs } from '@/lib/content';

const severityColors = {
  low: 'border-l-green-500',
  medium: 'border-l-yellow-500',
  high: 'border-l-red-500',
};
---

<section class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-4">
      {tradeoffs.headline}
    </h2>
    <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
      Honest assessment of limitations and risks
    </p>

    <div class="space-y-4 mb-12">
      {tradeoffs.items.map((item) => (
        <Card className={`border-l-4 ${severityColors[item.severity as keyof typeof severityColors]}`}>
          <CardContent className="pt-6">
            <div class="flex items-start gap-4">
              <svg class="w-5 h-5 text-muted-foreground mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-semibold mb-2">{item.title}</h3>
                <p class="text-sm text-muted-foreground">
                  {item.description}
                </p>
              </div>
            </div>
          </CardContent>
        </Card>
      ))}
    </div>

    <Alert className="border-primary/30 bg-primary/5">
      <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <AlertTitle className="text-lg">
        {tradeoffs.safety.headline}
      </AlertTitle>
      <AlertDescription className="mt-2 text-muted-foreground">
        {tradeoffs.safety.content}
      </AlertDescription>
    </Alert>
  </div>
</section>
