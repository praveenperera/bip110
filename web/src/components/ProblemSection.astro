---
import { motivation } from '@/lib/content';
---

<section class="py-24 px-6 bg-muted/30">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">
      {motivation.headline}
    </h2>

    <div class="space-y-8">
      {motivation.paragraphs.map((paragraph) => (
        <p class="text-lg leading-relaxed text-muted-foreground">
          {paragraph}
        </p>
      ))}
    </div>

    <div class="mt-12 p-6 rounded-xl bg-primary/5 border border-primary/20">
      <p class="text-center font-medium text-lg" set:html="&ldquo;Bitcoin should do one thing, and do it well.&rdquo;">
      </p>
    </div>
  </div>
</section>
